DEF stiffts ( )
  
  MyPosSimon = {POS: X 0, Y 0, Z 0, A 0, B 0, C 0}
  SimonBool = TRUE
  
  BAS(#INITMOV,0)
  BAS(#VEL_CP, 0.4)  							; Continous Path velocity (m/s)
  BAS(#VEL_PTP, 20) 
  HOME = $POS_ACT	
  
  PTP HOME							; Set current position as home position
  
  WHILE SimonBool
      PTP MyPosSimon
  ENDWHILE
  
  
  PTP HOME
END